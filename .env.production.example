# ========================================
# Casa Ignat - Production Environment Variables
# ========================================
# Copy this file to .env and fill in the values

# ---------------------------------------
# Application
# ---------------------------------------
NODE_ENV=production
PORT=3000
SITE_URL=https://casa-ignat.ro

# ---------------------------------------
# Database - MongoDB
# ---------------------------------------
MONGODB_URI=mongodb://admin:CHANGE_ME_STRONG_PASSWORD@mongodb:27017/casa_ignat?authSource=admin
MONGODB_USER=admin
MONGODB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ---------------------------------------
# Cache - Redis
# ---------------------------------------
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ---------------------------------------
# Session & Security
# ---------------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=GENERATE_RANDOM_64_CHAR_STRING_HERE
SESSION_MAX_AGE=2592000000
CSRF_SECRET=GENERATE_RANDOM_32_CHAR_STRING_HERE
BCRYPT_ROUNDS=12

# ---------------------------------------
# Email (SMTP)
# ---------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=Casa Ignat <noreply@casa-ignat.ro>
CONTACT_EMAIL=contact@casa-ignat.ro

# ---------------------------------------
# File Upload
# ---------------------------------------
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf

# ---------------------------------------
# Build Information (CI/CD auto-populated)
# ---------------------------------------
BUILD_DATE=
VCS_REF=
VERSION=1.0.0
