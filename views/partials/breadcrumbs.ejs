<%
/**
 * Breadcrumbs UI Component
 * Componenta pentru afișarea breadcrumbs în interfață
 *
 * Variables required:
 * - breadcrumbs: Array de obiecte [{name, url}]
 */

if (typeof breadcrumbs === 'undefined' || !breadcrumbs || !Array.isArray(breadcrumbs) || breadcrumbs.length <= 1) {
  // Skip rendering if no breadcrumb data or only home
  return;
}
%>

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol class="breadcrumbs-list">
    <% breadcrumbs.forEach((item, index) => { %>
      <li class="breadcrumbs-item <%= index === breadcrumbs.length - 1 ? 'active' : '' %>">
        <% if (index === breadcrumbs.length - 1) { %>
          <!-- Last item (current page) - no link -->
          <span aria-current="page"><%= item.name %></span>
        <% } else { %>
          <!-- Link items -->
          <a href="<%= item.url %>"><%= item.name %></a>
          <span class="breadcrumbs-separator" aria-hidden="true">/</span>
        <% } %>
      </li>
    <% }); %>
  </ol>
</nav>

<style>
/* Breadcrumbs Styles */
.breadcrumbs {
  padding: 1rem 0;
  margin-bottom: 1.5rem;
  font-size: 0.875rem;
}

.breadcrumbs-list {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;
  margin: 0;
  align-items: center;
  gap: 0.5rem;
}

.breadcrumbs-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.breadcrumbs-item a {
  color: var(--color-primary, #4a7c59);
  text-decoration: none;
  transition: color 0.2s ease;
}

.breadcrumbs-item a:hover {
  color: var(--color-primary-dark, #3a5f44);
  text-decoration: underline;
}

.breadcrumbs-item.active span {
  color: var(--color-text-secondary, #666);
  font-weight: 500;
}

.breadcrumbs-separator {
  color: var(--color-text-muted, #999);
  user-select: none;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .breadcrumbs {
    font-size: 0.8125rem;
    padding: 0.75rem 0;
    margin-bottom: 1rem;
  }

  .breadcrumbs-list {
    gap: 0.375rem;
  }

  .breadcrumbs-item {
    gap: 0.375rem;
  }
}

/* Print styles */
@media print {
  .breadcrumbs {
    display: none;
  }
}
</style>
