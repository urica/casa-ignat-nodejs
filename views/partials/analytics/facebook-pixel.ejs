<%# Facebook Pixel %>
<% if (analytics.fbPixelId && hasMarketingConsent) { %>
<!-- Facebook Pixel Code -->
<script>
  !function(f,b,e,v,n,t,s)
  {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
  n.callMethod.apply(n,arguments):n.queue.push(arguments)};
  if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
  n.queue=[];t=b.createElement(e);t.async=!0;
  t.src=v;s=b.getElementsByTagName(e)[0];
  s.parentNode.insertBefore(t,s)}(window, document,'script',
  'https://connect.facebook.net/en_US/fbevents.js');

  // Initialize pixel with consent mode
  fbq('consent', '<%= hasMarketingConsent ? "grant" : "revoke" %>');

  fbq('init', '<%= analytics.fbPixelId %>', {
    external_id: '<%= user?.id || "" %>',
  });

  fbq('track', 'PageView');

  <% if (typeof pageType !== 'undefined') { %>
    <% if (pageType === 'service') { %>
      // Track service view
      fbq('track', 'ViewContent', {
        content_name: '<%= title %>',
        content_category: 'Service',
        content_ids: ['<%= serviceId || "" %>'],
        content_type: 'product',
      });
    <% } else if (pageType === 'blog') { %>
      // Track blog post view
      fbq('track', 'ViewContent', {
        content_name: '<%= title %>',
        content_category: 'Blog',
        content_type: 'article',
      });
    <% } %>
  <% } %>
</script>
<noscript>
  <img height="1" width="1" style="display:none"
       src="https://www.facebook.com/tr?id=<%= analytics.fbPixelId %>&ev=PageView&noscript=1"/>
</noscript>
<!-- End Facebook Pixel Code -->
<% } %>
