<!DOCTYPE html>
<html lang="ro">
<%
  const body = `
    <div class="dashboard-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
        <div class="card">
            <div class="card-body">
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <div>
                        <p style="color: var(--gray); font-size: 0.875rem; margin-bottom: 0.5rem;">Articole Blog</p>
                        <h3 style="font-size: 2rem; font-weight: 700; color: var(--dark);">${stats.totalPosts}</h3>
                        <p style="font-size: 0.875rem; color: var(--success);"><i class="fas fa-check"></i> ${stats.publishedPosts} publicate</p>
                    </div>
                    <div style="width: 3.5rem; height: 3.5rem; background: var(--primary); color: white; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                        <i class="fas fa-newspaper"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <div>
                        <p style="color: var(--gray); font-size: 0.875rem; margin-bottom: 0.5rem;">Programări</p>
                        <h3 style="font-size: 2rem; font-weight: 700; color: var(--dark);">${stats.totalBookings}</h3>
                        <p style="font-size: 0.875rem; color: var(--warning);"><i class="fas fa-clock"></i> ${stats.pendingBookings} în așteptare</p>
                    </div>
                    <div style="width: 3.5rem; height: 3.5rem; background: var(--secondary); color: white; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <div>
                        <p style="color: var(--gray); font-size: 0.875rem; margin-bottom: 0.5rem;">Testimoniale</p>
                        <h3 style="font-size: 2rem; font-weight: 700; color: var(--dark);">${stats.totalTestimonials}</h3>
                        <p style="font-size: 0.875rem; color: var(--info);"><i class="fas fa-star"></i> ${stats.pendingTestimonials} de aprobat</p>
                    </div>
                    <div style="width: 3.5rem; height: 3.5rem; background: var(--accent); color: var(--dark); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                        <i class="fas fa-comments"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 2rem;">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Programări Recente</h3>
            </div>
            <div class="card-body">
                <% if (recentBookings.length === 0) { %>
                    <p style="color: var(--gray); text-align: center; padding: 2rem;">Nu există programări recente</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Data</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentBookings.forEach(booking => { %>
                                    <tr>
                                        <td><%= booking.name %></td>
                                        <td><%= helpers.formatDate(booking.checkIn) %></td>
                                        <td>
                                            <% if (booking.status === 'pending') { %>
                                                <span style="color: var(--warning);">În așteptare</span>
                                            <% } else if (booking.status === 'confirmed') { %>
                                                <span style="color: var(--success);">Confirmată</span>
                                            <% } else if (booking.status === 'cancelled') { %>
                                                <span style="color: var(--danger);">Anulată</span>
                                            <% } else { %>
                                                <span style="color: var(--gray);">Finalizată</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
            <div class="card-footer" style="text-align: center;">
                <a href="/admin/bookings" class="btn btn-sm btn-outline-primary">Vezi toate programările</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Activitate Recentă</h3>
            </div>
            <div class="card-body">
                <% if (recentActivity.length === 0) { %>
                    <p style="color: var(--gray); text-align: center; padding: 2rem;">Nu există activitate recentă</p>
                <% } else { %>
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <% recentActivity.forEach(activity => { %>
                            <div style="padding: 0.75rem; border-left: 3px solid var(--primary); background: var(--light); border-radius: 0.25rem;">
                                <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 0.25rem;">
                                    <strong><%= activity.user ? activity.user.name : activity.email %></strong>
                                    <span style="font-size: 0.75rem; color: var(--gray);"><%= helpers.timeAgo(activity.createdAt) %></span>
                                </div>
                                <p style="margin: 0; font-size: 0.875rem; color: var(--gray);">
                                    <%= activity.action.replace('_', ' ') %> - <%= activity.resource %>
                                </p>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
            <% if (user.role === 'admin') { %>
                <div class="card-footer" style="text-align: center;">
                    <a href="/admin/audit" class="btn btn-sm btn-outline-primary">Vezi audit log complet</a>
                </div>
            <% } %>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Acțiuni Rapide</h3>
        </div>
        <div class="card-body">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                <a href="/admin/blog/create" class="btn btn-outline-primary">
                    <i class="fas fa-plus"></i>
                    Articol nou
                </a>
                <a href="/admin/pages/create" class="btn btn-outline-primary">
                    <i class="fas fa-file-plus"></i>
                    Pagină nouă
                </a>
                <a href="/admin/services/create" class="btn btn-outline-primary">
                    <i class="fas fa-hand-holding-medical"></i>
                    Serviciu nou
                </a>
                <a href="/admin/media" class="btn btn-outline-primary">
                    <i class="fas fa-upload"></i>
                    Încarcă media
                </a>
            </div>
        </div>
    </div>
  `;
%>
<%- include('../layouts/main', { body, currentPath: '/admin' }) %>
</html>
