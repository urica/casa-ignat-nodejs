        <button type="button" class="alert-close" aria-label="Close">
            <i class="fas fa-times"></i>
        </button>
        <i class="fas fa-info-circle"></i>
        <div class="alert-content">
            <% info.forEach(msg => { %>
                <p><%= msg %></p>
            <% }); %>
        </div>
    </div>
<% } %>
