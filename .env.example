# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/casa_ignat
MONGODB_URI_TEST=mongodb://localhost:27017/casa_ignat_test

# Session
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# Security
BCRYPT_ROUNDS=10
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=Casa Ignat <noreply@casaignat.ro>
CONTACT_EMAIL=contact@casaignat.ro

# Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=public/uploads

# Image Processing
IMAGE_QUALITY=80
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=200
MEDIUM_WIDTH=800
MEDIUM_HEIGHT=600
LARGE_WIDTH=1920
LARGE_HEIGHT=1080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin
ADMIN_EMAIL=admin@casaignat.ro
ADMIN_PASSWORD=changeme123

# Social Media (optional)
FACEBOOK_URL=https://facebook.com/casaignat
INSTAGRAM_URL=https://instagram.com/casaignat

# Google Analytics (optional)
GA_TRACKING_ID=

# Booking Settings
BOOKING_EMAIL=rezervari@casaignat.ro
MIN_BOOKING_DAYS=1
MAX_BOOKING_DAYS=30
